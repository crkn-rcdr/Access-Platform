{
  "name": "@crkn-rcdr/access-data",
  "version": "0.0.0",
  "description": "Specifications and utilities for Access Platform data",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crkn-rcdr/Access-Platform.git",
    "directory": "data"
  },
  "contributors": [
    {
      "name": "Sascha Adler",
      "email": "sadler@crkn.ca"
    }
  ],
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/crkn-rcdr/Access-Platform/issues"
  },
  "homepage": "https://github.com/crkn-rcdr/Access-Platform",
  "scripts": {
    "build:schemas": "rm -rf schemas && ts-node writeSchemas.ts",
    "build:ts": "rm -rf dist && tsc && tsc -p ./tsconfig-esm.json",
    "build": "run-s test build:ts build:schemas",
    "test": "ava -v",
    "test:all": "ava -v"
  },
  "dependencies": {
    "ajv": "^7.2.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "src/**/*.spec.*",
      "!src/**/common.spec.*"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/mkdirp": "^1.0.1",
    "ava": "^3.15.0",
    "fs-extra": "^9.1.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
