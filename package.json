{
  "name": "@crkn-rcdr/access-platform",
  "version": "0.0.0",
  "private": true,
  "description": "Specifications and implementations for the Canadiana Access Platform",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crkn-rcdr/Access-Platform.git"
  },
  "contributors": [
    {
      "name": "Sascha Adler",
      "email": "sadler@crkn.ca"
    }
  ],
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/crkn-rcdr/Access-Platform/issues"
  },
  "homepage": "https://github.com/crkn-rcdr/Access-Platform#readme",
  "scripts": {
    "cleanup": "pnpm run kivik:stop",
    "dev": "run-s down dev:up",
    "dev:up": "docker-compose --profile dev up --build --remove-orphans --detach",
    "dev:up:watch": "docker-compose --profile dev up --build --remove-orphans",
    "dev:restart": "docker-compose --profile dev restart",
    "down": "docker-compose down --volumes",
    "preinstall": "npx only-allow pnpm",
    "prod": "run-s down prod:up",
    "prod:up": "docker-compose --profile prod up --build --remove-orphans --detach",
    "prod:restart": "docker-compose --profile prod restart",
    "test": "pnpm -r test:all"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "fsevents"
    ]
  }
}
