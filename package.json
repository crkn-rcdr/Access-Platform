  },
  "homepage": "https://github.com/crkn-rcdr/Access-Platform#readme",
  "scripts": {
    "cleanup": "pnpm run kivik:stop",
    "dev": "pnpm run --parallel --stream dev",
    "preinstall": "npx only-allow pnpm",
    "kivik:start": "cd services/couchdb && pnpx kivik start && pnpx kivik deploy local",
    "kivik:stop": "cd services/couchdb && pnpx kivik stop",
    "test": "pnpm run kivik:start && pnpm -r test:all; pnpm run kivik:stop"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
