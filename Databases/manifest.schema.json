{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/crkn-rcdr/Access-Platform/blob/master/Databases/manifest.schema.json",
  "title": "Manifest Document Schema",
  "description": "",
  "type": "object",
  "properties": {
    "_id": { "$ref": "./_util.schema.json#/definitions/manifestNoid" },
    "_rev": { "$ref": "./_util.schema.json#/definitions/_rev" },
    "slug": {
      "description": "Human-readable identifier",
      "type": "string"
    },
    "formerSlug": {
      "description": "Human-readable identifier that used to identify this manifest, but now identifies a newer manifest"
    },
    "label": {
      "description": "Manifest display label",
      "type": "string"
    },
    "canvases": {
      "description": "List of canvas NOIDs, corresponding to the members of this manifest",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "$ref": "./_util.schema.json#/definitions/canvasNoid" },
          "label": {
            "description": "Manifest-specific label for this canvas",
            "type": "string"
          }
        },
        "required": ["id", "label"]
      }
    },
    "master": {
      "description": "Master PDF for a born-digital object",
      "type": "object",
      "properties": {
        "url": { "$ref": "./_util.schema.json#/definitions/legacyRepoURL" },
        "size": { "type": "number" }
      },
      "required": ["url", "size"]
    },
    "masterPages": {
      "description": "List of page labels for a born-digital object",
      "type": "array",
      "items": { "type": "string" }
    },
    "public": {
      "allOf": [
        {
          "description": "Date on which manifest was made public. Remove to take down"
        },
        { "$ref": "./_util.schema.json#/definitions/iso8601datetime" }
      ]
    },
    "frozen": {
      "allOf": [
        {
          "description": "Date on which manifest was frozen by staff"
        },
        { "$ref": "./_util.schema.json#/definitions/iso8601datetime" }
      ]
    },
    "collections": { "$ref": "./_util.schema.json#/definitions/collections" },
    "ocrPdf": {
      "description": "Path to and information about the derivative PDF generated by OCR",
      "type": "object",
      "properties": {
        "url": { "$ref": "./_util.schema.json#/definitions/legacyRepoURL" },
        "size": { "type": "number" }
      },
      "required": ["url", "size"]
    },
    "dmdType": {
      "description": "The type of the descriptive metadata record associated with this manifest",
      "type": "string",
      "enum": ["marc", "dc", "issueinfo"]
    },
    "updateInternalmeta": {
      "allOf": [
        {
          "description": "Trigger for updating the internalmeta database with this manifest, or result of an attempted update"
        },
        { "$ref": "./_util.schema.json/#definitions/update" }
      ]
    }
  },
  "required": ["_id", "_rev", "label", "dmdType", "collections"]
}
