{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/crkn-rcdr/Access-Platform/blob/master/Databases/manifest.schema.json",
  "title": "Manifest Document Schema",
  "description": "",
  "type": "object",
  "properties": {
    "_id": { "$ref": "./_util.schema.json#/definitions/manifestNoid" },
    "_rev": { "$ref": "./_util.schema.json#/definitions/_rev" },
    "slug": {
      "description": "Human-readable identifier",
      "type": "string"
    },
    "label": {
      "description": "Manifest display label",
      "type": "string"
    },
    "canvases": {
      "description": "List of canvas NOIDs, corresponding to the members of this manifest",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "$ref": "./_util.schema.json#/definitions/canvasNoid" },
          "label": {
            "description": "Manifest-specific label for this canvas",
            "type": "string"
          }
        },
        "required": ["id", "label"]
      }
    },
    "public": {
      "allOf": [
        {
          "description": "Date on which manifest was made public. Remove to take down"
        },
        { "$ref": "./_util.schema.json#/definitions/iso8601datetime" }
      ]
    },
    "frozen": {
      "allOf": [
        {
          "description": "Date on which manifest was frozen by staff"
        },
        { "$ref": "./_util.schema.json#/definitions/iso8601datetime" }
      ]
    },
    "collections": { "$ref": "./_util.schema.json#/definitions/collections" },
    "download": {
      "description": "Path to and information about a downloadable file for this object (usually a PDF)",
      "type": "object",
      "properties": {
        "url": { "$ref": "./_util.schema.json#/definitions/legacyRepoURL" },
        "mime": { "$ref": "./_util.schema.json#/definitions/mime" },
        "size": { "type": "number" }
      },
      "required": ["url", "mime", "size"]
    },
    "dmdType": {
      "description": "The type of the descriptive metadata record associated with this manifest",
      "type": "string",
      "enum": ["marc", "dc", "issueinfo"]
    },
    "updateInternalmeta": {
      "description": "Trigger for updating the internal metadata database with this manifest, or result of an attempted update",
      "type": "object",
      "properties": {
        "requestDate": {
          "$ref": "./_util.schema.json#/definitions/iso8601datetime"
        },
        "processDate": {
          "$ref": "./_util.schema.json#/definitions/iso8601datetime"
        },
        "succeeded": { "type": "boolean" },
        "message": { "type": "string" }
      },
      "required": ["requestDate"]
    }
  },
  "required": [
    "_id",
    "_rev",
    "slug",
    "label",
    "canvases",
    "dmdType",
    "collections"
  ]
}
