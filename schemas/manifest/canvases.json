{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/manifest/canvases.json",
  "title": "Canvas Manifest",
  "description": "A manifest comprising a series of canvases",
  "type": "object",
  "propertyNames": {
    "type": "string",
    "enum": [
      "id",
      "_id",
      "_rev",
      "type",
      "public",
      "updateInternalmeta",
      "slug",
      "label",
      "summary",
      "dmdType",
      "from",
      "behavior",
      "viewingDirection",
      "canvases",
      "ocrPdf"
    ]
  },
  "allOf": [
    { "$ref": "/manifest.json" },
    {
      "properties": {
        "from": {
          "type": "string",
          "const": "canvases"
        },
        "canvases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": { "$ref": "/util/noid.json" },
              "label": {
                "description": "The canvas's label in the context of this manifest",
                "$ref": "/util/text.json"
              }
            }
          }
        },
        "ocrPdf": {
          "description": "Information about the derivative PDF generated by OCR.",
          "$comment": "If path is not specified, a file should exist in the access object store at $id.pdf",
          "$ref": "/util/file.json"
        }
      },
      "required": ["from", "canvases"]
    }
  ]
}
