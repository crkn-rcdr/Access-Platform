{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/manifest/pdf.json",
  "title": "PDF Manifest",
  "description": "A manifest comprising a (born-digital) PDF",
  "type": "object",
  "propertyNames": {
    "type": "string",
    "enum": [
      "id",
      "_id",
      "rev",
      "type",
      "public",
      "updateInternalmeta",
      "slug",
      "label",
      "summary",
      "dmdType",
      "from",
      "behavior",
      "viewingDirection",
      "file",
      "pageLabels"
    ]
  },
  "allOf": [
    { "$ref": "../manifest.json" },
    {
      "properties": {
        "from": {
          "type": "string",
          "const": "pdf"
        },
        "file": {
          "$ref": "../file.json"
        },
        "pageLabels": {
          "description": "Labels assigned to each page in the page viewer",
          "type": "array",
          "items": { "$ref": "../text.json" }
        }
      },
      "required": ["from", "file", "pageLabels"]
    }
  ]
}
