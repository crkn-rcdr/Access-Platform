{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/slugged.json",
  "title": "Slugged object",
  "description": "Access object identifiable by a slug",
  "type": "object",
  "allOf": [
    { "$ref": "access.json" },
    {
      "properties": {
        "slug": {
          "description": "Human-readable identifier",
          "type": "string",
          "pattern": "^[\\p{L}\\p{Nl}\\p{Nd}\\-_\\.]$"
        }
      },
      "required": ["slug"]
    }
  ]
}
